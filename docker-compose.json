version: "3.8"

services:
  postgres:
    image: postgres:latest
    container_name: postgres_db_container
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: 
      POSTGRES_DB: postgres
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data # Persist database data
    networks:
      - my_network

  app:
    build: .
    container_name: my_node_app
    restart: always
    depends_on:
      - postgres # Ensures PostgreSQL starts first
    environment:
      DATABASE_URL: "postgresql://postgres:@postgres:5432/postgres"
    ports:
      - "3000:3000"
    networks:
      - my_network

volumes:
  pgdata: # Named volume to persist PostgreSQL data

networks:
  my_network: # Custom network for communication
